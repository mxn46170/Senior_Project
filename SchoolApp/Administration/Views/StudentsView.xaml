<UserControl x:Class="Administration.Views.StudentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Administration.Views"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="950">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="6.1*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="3"
                   Text="{StaticResource Studentslbl}"
                   HorizontalAlignment="Center"
                   FontSize="26" 
                   FontWeight="Bold" 
                   Margin="0 10 0 0"/>
        
        <StackPanel Grid.Column="0" 
                    HorizontalAlignment="Center"
                    Margin="0 70 0 0">
            <Button Height="30" 
                    Width="120" 
                    Content="{StaticResource AddStudentsbtn}"
                    FontSize="14" 
                    Click="DisplayAddEditStudentsView"/>
        </StackPanel>
        
        <StackPanel Grid.Column="1" 
                    HorizontalAlignment="Center"
                    Margin="0 70 0 0">
            <Button Height="30" 
                    Width="120" 
                    Content="{StaticResource EditStudentsbtn}"
                    FontSize="14"/>
        </StackPanel>
        
        <StackPanel Grid.Column="2" 
                    HorizontalAlignment="Center" 
                    Margin="0 70 0 0">
            <Button Height="30"
                    Width="120"
                    Content="{StaticResource Searchbtn}"
                    FontSize="14"/>
        </StackPanel>

        <Frame x:Name="StudentMain" 
               Grid.Row="1" 
               Grid.ColumnSpan="3"
               NavigationUIVisibility="Hidden"/>

    </Grid>
</UserControl>
